services:
  db:
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_PID: Developer
      SA_PASSWORD: MicroORM123
    image: mcr.microsoft.com/mssql/server
    ports:
    - published: 1434
      target: 1433
  microorm.samples:
    build:
      context: C:\Source\Workspaces\MicroORM\MicroORM
      dockerfile: ../MicroORM.Samples/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: MicroORM.Samples
      target: base
    container_name: MicroORM.Samples
    depends_on:
    - db
    - migration
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      DefaultConnString: Server=db;Database=MicroORM_Sample;User=sa;Password=MicroORM123;
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages;/root/.nuget/fallbackpackages2
    image: microormsamples:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages --additionalProbingPath
        /root/.nuget/fallbackpackages2  "/app/bin/Debug/netcoreapp3.1/MicroORM.Samples.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - target: 80
    tty: true
    volumes:
    - C:\Source\Workspaces\MicroORM\MicroORM.Samples:/app:rw
    - C:\Users\andre\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\andre\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\andre\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Microsoft\Xamarin\NuGet:/root/.nuget/fallbackpackages:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages2:ro
    - C:\Users\andre\.nuget\packages:/root/.nuget/packages:ro
    - C:\Source\Workspaces\MicroORM\MicroORM:/src:rw
  migration:
    build:
      context: C:\Source\Workspaces\MicroORM
      dockerfile: InitializeDB/Dockerfile
    depends_on:
    - db
    environment:
      SA_PASSWORD: MicroORM123
      SA_USER: sa
version: '3.4'