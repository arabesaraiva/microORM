services:
  db:
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_PID: Developer
      SA_PASSWORD: MicroORM123
    image: mcr.microsoft.com/mssql/server
    ports:
    - published: 1434
      target: 1433
  microorm.samples:
    build:
      context: C:\Source\Workspaces\MicroORM\MicroORM
      dockerfile: ../MicroORM.Samples/Dockerfile
    depends_on:
    - db
    - migration
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DefaultConnString: Server=db;Database=MicroORM_Sample;User=sa;Password=MicroORM123;
    image: microormsamples
    ports:
    - target: 80
  migration:
    build:
      context: C:\Source\Workspaces\MicroORM
      dockerfile: InitializeDB/Dockerfile
    depends_on:
    - db
    environment:
      SA_PASSWORD: MicroORM123
      SA_USER: sa
version: '3.4'